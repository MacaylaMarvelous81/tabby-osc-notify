{
	"compilerOptions": {
		"baseUrl": "src",
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es2016",
		"esModuleInterop": true,
		"noImplicitAny": false,
		"removeComments": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"declaration": true,
		"declarationDir": "dist",
		"lib": [
			"dom",
			"es2015",
			"es7"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
